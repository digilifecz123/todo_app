<% include partials/header %>
<div class="col-md-6 col-sm-6 col-xs-10  col-sm-offset-3  col-sm-offset-3  col-md-offset-3 col-xs-offset-1  ">
  <div class="todolist not-done">
    <div class="center">
      <h1>TodoBakers</h1>
      <p>Just write down all you tasks!</p>
    </div>
    <form action="/secret" method="post">
      <input type="text"  name="task[title]" class="form-control add-todo" placeholder="Add todo">
      <button id="checkAll" class="btn btn-success add-task float-right">Add task</button>
    </form>
    <hr>
    <ul id="sortable" class="list-unstyled">
      <% tasks.forEach(function(task){ %>
      <li class="ui-state-default">
        <!--Icon EDIT-->
        <button id="updateTodoButton" class=" updateTodoButton glyphicon glyphicon-pencil btn btn-warning btn-sm"></button>
        <!-- DELETE form-->
        <span id=TodoTitle class="TodoTitle"><%= task.title%></span>
        <form  action="/secret/<%=task._id%>?_method=DELETE" method="POST" style="display: inline">
          <button  class="float-right glyphicon glyphicon-remove btn btn-danger btn-sm"></button>
        </form>
        <!--EDIT form-->
        <form  id="updateTodoForm"  class="hide updateTodoForm" action="/secret/<%=task._id %>?_method=PUT" method="POST">
          <input type="text" class="inputEdit form-control"  name="task[title]" value="<%=task.title %>">
          <input type='submit' id='submitUpdateForm' class='hide submitUpdateForm'>
        </form>
      </li>
      <% }) %>
    </ul>
    <div class="todo-footer">
      <strong><span class="count-todos"></span></strong> Items Left
    </div>
  </div>
</div>
<style>
  body{
  background-color:#EEEEEE;
  }
</style>
<% include partials/footer %>